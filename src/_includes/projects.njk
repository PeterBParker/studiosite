<div class="projects">
  <div class="projectList">
    {%- for project in projects %}
    <div class="projectCard {{ project.className }}Banner" style="background-image: linear-gradient(0deg,rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 100%), url('{{ project.background }}');">
      <div class="projectBanner mainHorizontalMargin"> 
        <div class="projectType">/ {{ project.type }}</div>
        <div class="projectName ">{{ project.name }}</div>      
        <div class="projectAbout">
          <div class="projectDescription">{{ project.description }}</div>

          {%- if project.live %}
            <a href="{{ project.url }}" class="projectExploreLink actionBtn btn">
              <div>Explore</div>
              <div>â†’</div>
            </a>
          {%- else %}
            <div class="projectExploreLink disableBtn btn">Coming Soon!</div>
          {%- endif %}
        </div>
      </div>
    </div>
    {%- endfor %}
  </div>
</div>
